<header>
    <div class="backgroundBar">
        <a href="/hometosnoworski"><div class="littleIconContainer">
            <img class="iconPic" src="https://i.imgur.com/3eMDXEF.png" alt="user icon">
            <h4 class="bold">sup, {{user.firstName}}?</h4>
        </div></a>
        <div id="gnarniaTitleGroup">
            <h1 id="gnarniaSmall">gnarnia</h1>
            <h1 class="tagline">lift ticket + gear rental</h1>  
        </div>
        <div class="littleIconContainer">
            <img class="iconPic" id="cart" src="https://i.imgur.com/GwB47Wk.png" alt="user icon">
            <h4 class="bold">x items in cart</h4>
        </div>
    </div>
</header>


<form action='#', method='POST'>
    <div class="whiteBackground" id="userInfoPageBackground">
        <div class="infoBody" id="home">
            <div class="userInfoColumn">
                <h4 class="orders">current order</h4>
                <h2>user info*</h2>
                    <div class="firstName">
                        <input type="text" name="firstName" id="firstName" placeholder="first name" value="{{user.firstName}}">
                    </div>
                    <div class="lastName">
                        <input type="text" name="lastName" id="lastName" placeholder="last name" value="{{user.lastName}}">
                    </div> 
                    <div class="email">
                        <input type="text" name="email" id="email" placeholder="email" value="{{user.email}}">
                    </div>      
                    <div class="password">
                        <input type="text" name="password" id="password" placeholder="password" value="{{user.password}}">
                    </div>       
                    <div class="age">
                        <input type="text" name="age" id="age" placeholder="age" value="{{user.password}}">
                    </div>   
                    <input type="submit" value="delete account" class="deleteAcct">
            </div>
            <div class="paymentInfoColumn" id="home">
                <h4 class="orders">order history</h4>
                <h2>payment info*</h2>
                    <div class="fullName">
                        <input type="text" name="fullName" id="fullName" placeholder="full name" value="">
                    </div>
                    <div class="ccNumber">
                        <input type="text" name="ccNumber" id="ccNumber" placeholder="credit card number" value="">
                    </div>
                    <div class="expirationDate">
                        <input type="text" name="expirationDate" id="expirationDate" placeholder="expiration date" value="">
                    </div>
                    <div class="ccvCode">
                        <input type="text" name="ccvCode" id="ccvCode" placeholder="CCV code" value="">
                    </div>
                <h4 class="reserveGear">confirm info to start new order</h4>
                <input class="submit-btn" id="confirmInfo" type="submit" value="confirm info"> 
                <a href="#"><input class="submit-btn" id="logout" type="submit" value="logout"></a> 
            </div>
        </div>
    </div>
</form>
