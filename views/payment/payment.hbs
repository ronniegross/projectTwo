<header>
    <div class="backgroundBar">
        <a href="/{{user.id}}/home">
            <div class="littleIconContainer">
                <img class="iconPic" src="https://i.imgur.com/3eMDXEF.png" alt="user icon">
                <h4 class="bold">sup, {{user.firstName}}?</h4>
            </div>
        </a>
        <div id="gnarniaTitleGroup">
            <h1 id="gnarniaSmall">gnarnia</h1>
            <h1 class="tagline">lift ticket + gear rental</h1>
        </div>
        <div class="littleIconContainer">
            <img class="iconPic" id="cart" src="https://i.imgur.com/GwB47Wk.png" alt="user icon">
            <h4 class="bold">x items in cart</h4>
        </div>
    </div>
</header>

<div class="whiteBackground" id="userInfoPageBackground">
    <form action='/{{user.id}}/payment', method='POST'>
        <div class="loginBackground">
            <h2>payment info</h2>
                <div class="fullName">
                    <input type="text" name="fullName" id="fullName" placeholder="full name" value="{{payment.fullName}}">
                </div>
                <div class="ccNumber">
                    <input type="text" name="creditCardNumber" id="creditCardNumber" placeholder="credit card number"
                        value={{payment.creditCardNumber}}>
                </div>
                <div class="expirationDate">
                    <input type="text" name="expirationDate" id="expirationDate" placeholder="expiration date"
                        value="{{payment.expirationDate}}">
                </div>
                <div class="ccvCode">
                    <input type="text" name="CCVcode" id="CCVcode" placeholder="CCV code" value={{payment.CCVcode}}>
                </div>
            {{!-- <a href=""><input class="submit-btn" id="submit" type="submit" value="create account"> </a> --}}
            <input type="submit" value="submit">
        </div>
    </form>
    <form class="delete-form" action="/{{user.id}}/payment?_method=DELETE" method='POST'>
        <input type="submit" value="delete credit card" class="delete">
    </form>
</div>